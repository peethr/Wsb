<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peethr.wsbtest.MainActivity">

    <ImageView
        android:id="@+id/topLogoWsbWall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/shadow"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_menu_logo" />

    <ImageView
        android:id="@+id/sideMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:elevation="9dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintBottom_toTopOf="@+id/dashTopIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_white_36dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="486dp" />

    <ImageView
        android:id="@+id/dashTopIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:elevation="9dp"
        android:scaleType="centerCrop"
        android:scaleX="1"
        android:scaleY="1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/topLogoWsbWall"
        app:layout_constraintEnd_toStartOf="@+id/universityTopIcon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_dashboard_white_36dp" />

    <ImageView
        android:id="@+id/universityTopIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:elevation="9dp"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintEnd_toStartOf="@+id/eventTopIcon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dashTopIcon"
        app:layout_constraintTop_toTopOf="@+id/dashTopIcon"
        app:srcCompat="@drawable/ic_school_white_36dp" />

    <ImageView
        android:id="@+id/eventTopIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="9dp"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintEnd_toStartOf="@+id/infoTopIcon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/universityTopIcon"
        app:layout_constraintTop_toTopOf="@+id/dashTopIcon"
        app:srcCompat="@drawable/ic_star_border_white_36dp" />

    <ImageView
        android:id="@+id/infoTopIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:elevation="9dp"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eventTopIcon"
        app:layout_constraintTop_toTopOf="@+id/dashTopIcon"
        app:srcCompat="@drawable/ic_info_outline_white_36dp" />


    <Button
        android:id="@+id/eventButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/event_button"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tipButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weatherButton" />

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        android:text="Lorem ipsum"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/eventIcon"
        app:layout_constraintTop_toTopOf="@+id/eventButton" />

    <TextView
        android:id="@+id/eventMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="17dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque sollicitudin, lectus hendrerit molestie tempor."
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/eventIcon"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/eventIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/eventButton"
        app:layout_constraintStart_toStartOf="@+id/eventButton"
        app:layout_constraintTop_toTopOf="@+id/eventButton"
        app:srcCompat="@drawable/ic_event_white_36dp"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="439dp"
        android:layout_marginLeft="24dp" />


    <Button
        android:id="@+id/alertButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/alert_button"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@+id/weatherButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLogoWsbWall" />

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        android:text="Lorem ipsum"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/alertIcon"
        app:layout_constraintTop_toTopOf="@+id/alertButton" />

    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="17dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque sollicitudin, lectus hendrerit molestie tempor."
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/alertIcon"
        app:layout_constraintTop_toBottomOf="@+id/alertTitle"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/alertIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/alertButton"
        app:layout_constraintStart_toStartOf="@+id/alertButton"
        app:layout_constraintTop_toTopOf="@+id/alertButton"
        app:srcCompat="@drawable/ic_warning_white_36dp"
        android:layout_marginLeft="24dp" />


    <Button
        android:id="@+id/tipButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tip_button"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventButton" />

    <TextView
        android:id="@+id/tipTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        android:text="Lorem ipsum"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tipIcon"
        app:layout_constraintTop_toTopOf="@+id/tipButton"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/tipMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="17dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque sollicitudin, lectus hendrerit molestie tempor."
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tipIcon"
        app:layout_constraintTop_toBottomOf="@+id/tipTitle"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/tipIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/tipButton"
        app:layout_constraintStart_toStartOf="@+id/tipButton"
        app:layout_constraintTop_toTopOf="@+id/tipButton"
        app:srcCompat="@drawable/ic_lightbulb_outline_white_36dp"
        android:layout_marginLeft="24dp" />


    <Button
        android:id="@+id/weatherButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/weather_button"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@+id/eventButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alertButton" />

    <TextView
        android:id="@+id/weatherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        android:text="Gdańsk"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon"
        app:layout_constraintTop_toTopOf="@+id/weatherButton"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/weatherMessage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="17dp"
        android:text="Przewidywane lekkie opady. Radzimy przyowdziać coś ciepłego."
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon"
        app:layout_constraintTop_toBottomOf="@+id/weatherTitle"
        android:layout_marginLeft="16dp" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/weatherButton"
        app:layout_constraintStart_toStartOf="@+id/weatherButton"
        app:layout_constraintTop_toTopOf="@+id/weatherButton"
        app:srcCompat="@drawable/ic_cloud_queue_white_36dp"
        android:layout_marginLeft="24dp" />

    <ImageView
        android:id="@+id/arrowAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/alertButton"
        app:layout_constraintEnd_toEndOf="@+id/alertButton"
        app:layout_constraintStart_toEndOf="@+id/alertMessage"
        app:layout_constraintTop_toTopOf="@+id/alertButton"
        app:srcCompat="@drawable/ic_navigate_next_white_36dp" />

    <ImageView
        android:id="@+id/arrowEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/eventButton"
        app:layout_constraintEnd_toEndOf="@+id/eventButton"
        app:layout_constraintStart_toEndOf="@+id/eventMessage"
        app:layout_constraintTop_toTopOf="@+id/eventButton"
        app:srcCompat="@drawable/ic_navigate_next_white_36dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/arrowTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/tipButton"
        app:layout_constraintEnd_toEndOf="@+id/tipButton"
        app:layout_constraintStart_toEndOf="@+id/tipMessage"
        app:layout_constraintTop_toTopOf="@+id/tipButton"
        app:srcCompat="@drawable/ic_navigate_next_white_36dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/degrees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="17dp"
        android:text="-8°"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/weatherButton"
        app:layout_constraintEnd_toEndOf="@+id/weatherButton"
        app:layout_constraintStart_toEndOf="@+id/weatherMessage"
        app:layout_constraintTop_toTopOf="@+id/weatherButton"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/logoWsb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:elevation="17dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintBottom_toTopOf="@+id/infoTopIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sideMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_wsb_poziom" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:elevation="17dp"
        android:max="100"
        android:progress="17"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/progress"
        app:layout_constraintBottom_toTopOf="@+id/alertButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashTopIcon" />

    <ImageView
        android:id="@+id/backgroundSelectionDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="8dp"
        android:alpha="0.3"
        android:elevation="18dp"
        android:scaleX="2.87"
        android:scaleY="3"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/dashTopIcon"
        app:layout_constraintStart_toStartOf="@+id/dashTopIcon"
        app:srcCompat="@drawable/highlight"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/backgroundSelectionWsb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="8dp"
        android:alpha="0.3"
        android:elevation="18dp"
        android:scaleX="2.87"
        android:scaleY="3"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/universityTopIcon"
        app:layout_constraintStart_toStartOf="@+id/universityTopIcon"
        app:srcCompat="@drawable/highlight"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/backgroundSelectionEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="8dp"
        android:alpha="0.3"
        android:elevation="18dp"
        android:scaleX="2.87"
        android:scaleY="3"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/eventTopIcon"
        app:layout_constraintStart_toStartOf="@+id/eventTopIcon"
        app:srcCompat="@drawable/highlight"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="9dp" />

    <ImageView
        android:id="@+id/backgroundSelectionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="8dp"
        android:alpha="0.3"
        android:elevation="18dp"
        android:scaleX="2.87"
        android:scaleY="3"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        app:layout_constraintEnd_toEndOf="@+id/infoTopIcon"
        app:layout_constraintStart_toStartOf="@+id/infoTopIcon"
        app:srcCompat="@drawable/highlight"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="9dp" />


</android.support.constraint.ConstraintLayout>
